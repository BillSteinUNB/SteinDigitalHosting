# Copy this file to `.env.local` for local development.
# Never commit real secrets (consumer keys, NEXTAUTH_SECRET, Stripe keys, etc.).

# WordPress / WooCommerce (Headless)
NEXT_PUBLIC_WORDPRESS_URL=https://api.naturallyfit.ca
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://api.naturallyfit.ca/graphql

# NextAuth
NEXTAUTH_SECRET=replace-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Site config
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Naturally Fit

# Wholesale inquiry form -> WooCommerce REST (server-side only)
# Create these in WooCommerce Admin -> Settings -> Advanced -> REST API
WOOCOMMERCE_REST_URL=https://api.naturallyfit.ca
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret
# Shared secret for signed cart handoff to WordPress checkout endpoint.
WOO_HANDOFF_SECRET=replace-with-long-random-secret
# Optional override for custom handoff endpoint URL.
# WOO_HANDOFF_ENDPOINT_URL=https://wp.naturallyfit.ca/wp-admin/admin-post.php?action=nf_cart_handoff

# WholesaleX Configuration (for headless wholesale pages)
# Find these in WordPress Admin after installing WholesaleX plugin
WHOLESALEX_ROLE_NAME=wholesale_customer
WHOLESALEX_PRICE_META_KEY=_wholesale_price
WHOLESALEX_PLATINUM_ROLE_NAME=wholesale_platinum
NEXT_PUBLIC_WHOLESALE_DISCOUNT_PERCENT=10
NEXT_PUBLIC_WHOLESALE_PLATINUM_DISCOUNT_PERCENT=20

# Wholesale Portal Links (Step 1 - frontend auth + frontend shop)
# Login must stay on frontend so session-based wholesale pricing can render.
NEXT_PUBLIC_WHOLESALE_LOGIN_URL=/wholesale/login
NEXT_PUBLIC_WHOLESALE_ORDER_URL=/shop

