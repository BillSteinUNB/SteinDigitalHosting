# Copy this file to .env.local and fill in values

# === WORDPRESS / WOOCOMMERCE ===
# GraphQL endpoint URL
NEXT_PUBLIC_WORDPRESS_URL=https://your-wordpress-site.com
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://your-wordpress-site.com/graphql

# === AUTHENTICATION ===
# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# === SITE CONFIG ===
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Naturally Fit

# === CHECKOUT HANDOFF ===
# Shared secret used to sign frontend cart handoff payloads.
WOO_HANDOFF_SECRET=replace-with-long-random-secret
# Optional override for WordPress handoff endpoint.
# WOO_HANDOFF_ENDPOINT_URL=https://your-wordpress-site.com/wp-admin/admin-post.php?action=nf_cart_handoff

# === CONTACT INFO ===
NEXT_PUBLIC_PHONE_NUMBER=(506) 451-8707
NEXT_PUBLIC_EMAIL=info@naturallyfit.ca
NEXT_PUBLIC_ADDRESS=123 Main Street, Fredericton, NB

# === FEATURES ===
# Enable/disable mock data (true in development)
NEXT_PUBLIC_USE_MOCK_DATA=true

# === WHOLESALE PORTAL (Step 1) ===
# Keep login on frontend for session-based wholesale pricing.
NEXT_PUBLIC_WHOLESALE_LOGIN_URL=/wholesale/login
NEXT_PUBLIC_WHOLESALE_ORDER_URL=/shop

# === ANALYTICS (optional) ===
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# === STRIPE (for future checkout) ===
# STRIPE_SECRET_KEY=sk_test_...
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
